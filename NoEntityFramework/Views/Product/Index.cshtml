@model System.Data.DataTable
@{
}
<table class="table table-bordered table-striped">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Count</th>
        <th>Actions</th>
    </tr>
  
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td> <a href="@Url.Action("Edit", "Product", new {@id = Model.Rows[i][0] } )" ><i class="fa-solid fa-pen-to-square"></i></a> 
            <a href="@Url.Action("Delete", "Product", new {@id = Model.Rows[i][0] } )" ><i class="fa-solid fa-trash"></i></a></td>
           
        </tr>
     }
</table>

<a href="@Url.Action("Create" , "Product")" ><i class="fa-solid fa-add"></i> Add Product</a>